---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="col-span-2 mx-4">
	<a href={href}>
		<div class="w-full h-36 rounded-lg bg-yellow-300 mb-6">

		</div>
		<div class="text-md ">
			<h2 class="text-center text-lg font-bold mb-2">
				{title}
			</h2>
			<p>
				{body}
			</p>

		</div>
	</a>
</div>
