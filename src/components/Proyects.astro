      href="/crud"
      transitionName="crud-img"
      hover="hover:text-zinc-100 hover:border-zinc-100 active:translate-y-2"
    />
    <Card
      src="https://raw.githubusercontent.com/SuaveV9/Portfolio-1.0/refs/heads/master/public/Project-1.webp" 
      title="Nebuverse"
      body="Desarrollo de sitios web escalables"
      href="/nebuverse"
      transitionName="nebuverse-img"
      hover="hover:text-zinc-100 hover:border-zinc-100 active:translate-y-2"
    />
