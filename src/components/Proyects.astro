<section id="proyectos" class="flex flex-col md:mt-16 max-w-screen-xl m-auto" id="projects">
  <header class="h-auto">
    <h3 class="text-3xl text-center font-bold text-zinc-100 mt-12 mb-4 md:text-4xl">
      Conoce mi trabajo
    </h3>
  </header>
  <div
    class="cards grid text-center grid-cols-2 gap-3 px-2 md:gap-4 max-w-screen-md mx-auto place-content-center mt-4"
  >
   <Card
   src={CrudImg.src}
      title="proyecto CRUD"
