---
import Card from "../components/Card.astro";
---

<section id="proyectos" class="flex flex-col md:mt-16 max-w-screen-xl m-auto" id="projects">
  <header class="h-auto">
    <h3 class="text-3xl text-center font-bold text-zinc-100 mt-8 mb-2 md:text-4xl">
      Conoce mi trabajo
    </h3>
  </header>
  <div
    class="cards grid text-center grid-cols-2 gap-3 px-2 md:gap-4 max-w-screen-md mx-auto place-content-center mt-4"
  >
    <Card
      src="" 
      title="Nebuverse"
      body="Desarrollo de sitios web escalables"
      href="/nebuverse"
      hover="hover:text-zinc-100 hover:-translate-y-2 active:translate-y-2"
    />
    <Card
    src="" 
      title="Evergreen Store"
      body="Tienda de ropa"
      href="/evergreen"
      hover="hover:text-zinc-100 hover:-translate-y-2 active:translate-y-2"
    />
    <Card
      title="Otro proyecto"
      body="Este es Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quae, culpa."
      href="/crud"
      hover="hover:text-zinc-100 hover:-translate-y-2 active:translate-y-2"
    />
  </div>
</section>

