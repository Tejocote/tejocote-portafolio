---
import CldImage from "./CldImage.astro";
import Skills from "./Skills.astro";
import cvImage from "../assets/cv-image.png";
---

<div class="flex-col md:flex-row">
  <section
    id="inicio"
    data-section="inicio"
    class="scroll-m-20 w-full mx-auto container md:max-w-lg rounded-2xl md:mt-10 flex"
  >
    <div class="flex max-w-screen-md m-auto">
      <div class="p-4 py-10">
        <figure class="rounded-md overflow-hidden">
          <!-- <CldImage
            src="q_auto:low/f_webp/ar_1:1,c_crop/atyqpk6rki08xanwds0z.jpg"
            alt="César Hernández desarrollador web"
            width="200"
            height="200"
          /> -->
          <img
            src={cvImage.src}
            alt="Cesar Hernández desarrollador web"
            class="min-w-28 h-28 md:min-w-40 md:h-40 object-cover backdrop-blur-sm rounded-full bg-gradient-to-b from-secondary-blue to-primary-blue"
          />
        </figure>
      </div>
      <div class="flex flex-col justify-center mx-2">
        <h2 class="font-bold text-lg md:text-2xl text-zinc-100">
          César Hernández
        </h2>
        <p class="max-w-prose mt-2 text-md text-pretty text-zinc-400">
          Desarrollador <span class="text-amber-300">Javascript</span> | Frontend
          | Backend, consumo de APIs, uso de react.
        </p>
        <div class="flex items-center py-2 mx-2 gap-4 mt-4">
          <a
            href="https://github.com/Tejocote"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub profile"
            class="group"
          >
            <svg
              class="w-8 h-8 fill-zinc-400 group-hover:fill-zinc-100 transition-colors"
              role="img"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
